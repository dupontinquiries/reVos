{
    "name": "reVos web",
    "description": "A smart video player built to save you time.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "/images/reVos_logo.png"
        }
    },
    "icons": {
        "128": "/images/reVos_logo.png"
    }
}