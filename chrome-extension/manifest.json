{
  "manifest_version": 2,
  "version": "1",
  "name": "reVos",
  "description": "A smart video player built to save you time.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "data/inject.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/logo-mid-active-16.png",
    "32": "data/icons/logo-mid-active-32.png",
    "48": "data/icons/logo-mid-active-48.png",
    "64": "data/icons/logo-mid-active-64.png",
    "128": "data/icons/logo-mid-active-128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "data/icons/reVos_logo.png"
    },
    "default_popup": "data/popup/index.html",
    "theme_icons": [
      {
        "dark": "data/icons/reVos_logo.svg",
        "light": "data/icons/reVos_logo.svg",
        "size": 128
      }
    ]
  }
}